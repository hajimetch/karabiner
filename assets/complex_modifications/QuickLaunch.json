{
  "title": "QuickLaunch",
  "rules": [
    {
      "description": "Shift+Command+SpacebarでFinderを開く",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.parallels\\.desktop\\.console"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "shift",
                "command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open ~"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "右Option連打でアクティビティモニタを起動する",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option"
          },
          "to": [
            {
              "shell_command": "open -a 'Activity Monitor'"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "right_option_key",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "right_option_key",
                "value": 1
              }
            },
            {
              "key_code": "right_option"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "right_option_key",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "right_option_key",
                  "value": 0
                }
              }
            ]
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "right_option_key",
              "value": 0
            }
          ]
        }
      ]
    }
  ]
}
